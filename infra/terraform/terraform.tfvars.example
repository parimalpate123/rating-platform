# Copy to terraform.tfvars and fill in values.
# Required: cluster_name (your existing EKS cluster name)

cluster_name = "my-eks-cluster"
aws_region   = "us-east-1"
environment  = "dev"
namespace    = "rating-platform"
image_tag    = "latest"

# Optional: if you have an existing RDS/Postgres, set these so the DB Secret is created.
# Services that need DB (line-rating, product-config, rules-service, status-service) will use it.
# db_host     = "your-rds-endpoint.region.rds.amazonaws.com"
# db_port     = "5432"
# db_name     = "rating_platform"
# db_user     = "rating_user"
# db_password = "your-secure-password"
