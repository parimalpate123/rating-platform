{
  "name": "@rating-platform/adapter-kafka",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "adapter-kafka",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": ["--node-env=production"],
          "cwd": "services/adapters/kafka"
        },
        "configurations": {
          "development": { "args": ["--node-env=development"] }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": ["build"],
        "options": {
          "buildTarget": "adapter-kafka:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": { "buildTarget": "adapter-kafka:build:development" },
          "production": { "buildTarget": "adapter-kafka:build:production" }
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0"
  }
}
